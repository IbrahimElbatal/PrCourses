<section class="login" id="loginForm">
    <form class="login-form">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" id="email" name="email" class="form-control" data-rule-email="true" required  />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" required data-rule-password="true"  />
        </div>

        <div class="form-group">
            <p>
                Don't have an account?
                @Html.ActionLink("Create an Account", "Register", "Account")
                now!
            </p>

            <p>
                @Html.ActionLink("Forgot password?", "ForgotPassword", "Account")
            </p>
        </div>
        <div class="form-group">
            <input type="submit" value="Log in" class="btn btn-default" />
        </div>
    </form>
</section>
