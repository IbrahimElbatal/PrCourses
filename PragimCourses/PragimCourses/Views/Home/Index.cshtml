<div class="popular__courses">
    <div class="container">
        <h1 data-aos="fade-down" data-aos-duration="1000">Most Popular Online Courses</h1>
        <div class="btn-group" role="group">
            <button id="btnAll" class="btn active" data-filter="*">All</button>
            <button class="btn" data-filter=".free">Free</button>
            <button class="btn" data-filter=".download">Download</button>
            <button class="btn" data-filter=".online">Online</button>
        </div>
        <div class="grid row">
            
            @foreach (var online in Model.ClassroomCourses.Take(3))
            {
                <div data-aos="fade-right" data-aos-duration="800" class="col-md-4 col-sm-6 col-xs-12 element-item online">
                    <div class="course__wrap">
                        <div><img src="@Url.Content(online.ImagePath)" /></div>
                        <p>@online.Description</p>
                        <div class="course__footer">
                            <div class="star__content">
                                @for (var i = 0; i < online.Rating; i++)
                                {
                                    <span class="glyphicon glyphicon-star"></span>
                                }
                                @for (var i = 0; i < 5 - online.Rating; i++)
                                {
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                }
                            </div>
                            <span class="enrolled">@online.Reviews.Count Enrolled</span>
                        </div>
                    </div>

                </div>
            }
            @foreach (var free in Model.FreeCourses.Take(3))
            {
                <div data-aos="fade-left" data-aos-duration="800" class="col-md-4 col-sm-6 col-xs-12 element-item free">
                    <div class="course__wrap">
                        <div><img src="@Url.Content(free.ImagePath)" /></div>
                        <p>@free.Description</p>
                        <div class="course__footer">
                            <div class="star__content">
                                @for (var i = 0; i < free.Rating; i++)
                                {
                                    <span class="glyphicon glyphicon-star"></span>
                                }
                                @for (var i = 0; i < 5 - free.Rating; i++)
                                {
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                }
                            </div>
                            <span class="enrolled">@free.Reviews.Count Enrolled</span>
                        </div>
                    </div>

                </div>
            }

            
            @foreach (var download in Model.DownloadCourses.Take(3))
            {
                <div data-aos="fade-up" data-aos-duration="800" class="col-md-4 col-sm-6 col-xs-12 element-item download">
                    <div class="course__wrap">
                        <div><img src="@Url.Content(download.ImagePath)" /></div>
                        <p>@download.Description</p>
                        <div class="course__footer">
                            
                            @Html.ActionLink("Buy Now","AddToCart","Cart",new{id=download.Id},new{@class="btn pragim__information-button",style="margin:0"})
                        </div>
                    </div>

                </div>
            }
         
        </div>
    </div>
</div>
